{
  "$schema": "./schema/generated.schema.json",
  "begin": "OpenSettings",
  "globals": {
    "debug": true,
    "logConfig": {
      "level": "INFO",
      "file": "log/example.log",
      "format": "%(levelname)s - %(asctime)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "jobs": {
    "OpenSettings": {
      "type": "Input",
      "description": "打开 Windows 设置",
      "input": {
        "type": "Keyboard",
        "keyboard": {
          "keys": ["win", "i"]
        }
      },
      "next": {
        "success": "WaitForSettings",
        "failure": "RetryOpenSettings"
      },
      "delay": {
        "pre": 500,
        "cur": 1000,
        "post": 500
      },
      "limits": {
        "maxCount": 3
      }
    },
    "WaitForSettings": {
      "type": "System",
      "description": "等待设置窗口打开",
      "system": {
        "type": "Delay",
        "duration": 2000
      }
    },
    "RetryOpenSettings": {
      "type": "Input",
      "description": "重试打开 Windows 设置",
      "input": {
        "type": "Keyboard",
        "keyboard": {
          "keys": ["win", "i"]
        }
      },
      "next": {
        "success": "WaitForSettings"
      },
      "limits": {
        "maxCount": 2
      }
    }
  }
}
